{% extends 'base.html.twig' %}

{% block title %}Contract{% endblock %}

{% block body %}
    <h1>Contract</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contract.id }}</td>
            </tr>
            <tr>
                <th>NumeroContrat</th>
                <td>{{ contract.numeroContrat }}</td>
            </tr>
            <tr>
                <th>DebutContrat</th>
                <td>{{ contract.debutContrat ? contract.debutContrat|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>FinContrat</th>
                <td>{{ contract.finContrat ? contract.finContrat|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EtatVehicule</th>
                <td>{{ contract.etatVehicule }}</td>
            </tr>
            <tr>
                <th>Caution</th>
                <td>{{ contract.caution }}</td>
            </tr>
            <tr>
                <th>PrixLocation</th>
                <td>{{ contract.prixLocation }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('contract_index') }}">back to list</a>

    <a href="{{ path('contract_edit', {'id': contract.id}) }}">edit</a>

    {{ include('contract/_delete_form.html.twig') }}
{% endblock %}

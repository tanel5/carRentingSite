{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

<div class="reg">

    <div id="formConnexion">

        <h1 class="formTitleCi"> Se connecter </h1>

        <form id="connexion" action="{{ path('login') }}" method="post">
            <label></label>
            <br>
            <input type="text" class="inputInscription" id="username" name="_username" value="{{ last_username }}" placeholder="Email" required/>
            <br>
            <label></label>
            <br>
            <input type="password" class="inputInscription" id="password" name="_password" placeholder="Mot de Passe" required/>
            <br>
            <br>
            <a href="{{path('inscription')}}" id="lienCo">Vous n'avez pas de compte ? S'inscrire</a>
            <br>
            <br>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button class="formBtn" type="submit">Se connecter</button>
        </form>
    </div>
</div>
{% endblock %}
